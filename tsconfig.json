{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist",
    "target": "es2016",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "allowJs": false,
    "resolveJsonModule": true,
    "removeComments": true,

    "forceConsistentCasingInFileNames": true,
    
    "skipLibCheck": true,
    "types": ["jest", "node"],
    "lib": ["ESNext", "DOM"],

    "noImplicitAny": false,
    "noImplicitThis": false,
    "paths": {
      "@vue/*": ["packages/*/src"],
      "#type/*": ["types/*.d.ts"]
    }
  },
  "include": [
    "packages/index.ts",
    "packages/*/src",
    "packages/*/__tests__",
    "types"
  ]
}
